<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/walp1"
    android:id="@+id/root"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="version"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12ssp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="Holy Helper"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,PxUsage,RtlSymmetry" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/settingsButton"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/settings"
            tools:ignore="ContentDescription,PxUsage,RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/box"
        android:paddingHorizontal="25dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/device"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:src="@drawable/ic_launcher_background"
            tools:ignore="ContentDescription" />

        <Space
            android:layout_width="5dp"
            android:layout_height="0dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:background="@drawable/rounded_gray"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Windows on ARM"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_30sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4">

                <TextView
                    android:id="@+id/codeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Device: "
                    android:textSize="@dimen/_9ssp"
                    android:gravity="left"
                    android:textColor="@color/slightly_lighter_gray"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/panelType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/paneltype"
                    android:gravity="left"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/slightly_lighter_gray"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/totalRam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ramvalue"
                    android:gravity="left"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/slightly_lighter_gray"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/lastBackup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/last"
                    android:gravity="left"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/slightly_lighter_gray"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/slot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/slot"
                    android:gravity="left"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/slightly_lighter_gray"
                    tools:ignore="HardcodedText" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/groupButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_bej"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="@dimen/_7sdp"
                    android:paddingVertical="@dimen/_3sdp"
                    android:text="@string/group"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/light_bej"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/guideButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_bej"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="@dimen/_7sdp"
                    android:paddingVertical="@dimen/_3sdp"
                    android:text="@string/guide"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/light_bej"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box">

        <!--<com.venddair.holyhelper.Button
            android:id="@+id/backupButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_13sdp"
            android:layout_weight="1"
            app:image="@drawable/cd"
            app:subtitle="@string/backup_boot_subtitle"
            app:title="@string/backup_boot_title" />-->

        <LinearLayout
            android:id="@+id/backupButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/rounded_gray"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/cd"
                android:layout_marginEnd="8dp"
                android:contentDescription="asdasd"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                tools:ignore="NestedWeights">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/backup_boot_title"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/light_gray"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:paddingTop="6dp"
                    android:layout_marginBottom="-3dp"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/backup_boot_subtitle"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/gray"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:gravity="left"
                    android:paddingBottom="5dp" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_10sdp"/>

        <!--<com.venddair.holyhelper.Button
            android:id="@+id/mountButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:imageScaleX="0.6"
            app:imageScaleY="0.6"
            app:image="@drawable/folder"
            app:subtitle="@string/mnt_subtitle"
            app:title="@string/mnt_title" />-->

        <LinearLayout
            android:id="@+id/mountButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/rounded_gray"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/folder"
                android:layout_marginEnd="8dp"
                android:contentDescription="asdasd"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                tools:ignore="NestedWeights">

                <TextView
                    android:id="@+id/mount_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mnt_title"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/light_gray"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:paddingTop="6dp"
                    android:layout_marginBottom="-3dp"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mnt_subtitle"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/gray"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:gravity="left"
                    android:paddingBottom="5dp" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_10sdp"/>

        <!--<com.venddair.holyhelper.Button
            android:id="@+id/toolboxButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:imageScaleX=".85"
            app:imageScaleY=".85"
            app:image="@drawable/toolbox"
            app:subtitle="@string/toolbox_subtitle"
            app:title="@string/toolbox_title" />-->

        <LinearLayout
            android:id="@+id/toolboxButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/rounded_gray"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:scaleX="0.85"
                android:scaleY="0.85"
                android:src="@drawable/toolbox"
                android:layout_marginEnd="8dp"
                android:contentDescription="asdasd"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                tools:ignore="NestedWeights">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/toolbox_title"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/light_gray"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:paddingTop="6dp"
                    android:layout_marginBottom="-5dp"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/toolbox_subtitle"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/gray"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:gravity="left"
                    android:paddingBottom="5dp" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_10sdp"/>

        <!--<com.venddair.holyhelper.Button
            android:id="@+id/quickbootButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:image="@drawable/win11logo"
            app:subtitle="@string/quickboot_subtitle"
            app:title="@string/quickboot_title" />-->

        <LinearLayout
            android:id="@+id/quickbootButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/rounded_gray"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:src="@drawable/win11logo"
                android:layout_marginEnd="8dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:contentDescription="asdasd"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                tools:ignore="NestedWeights">

                <TextView
                    android:id="@+id/quickboot_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quickboot_title"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/light_gray"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:paddingTop="6dp"
                    android:layout_marginBottom="-5dp"
                     />

                <TextView
                    android:id="@+id/quickboot_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quickboot_subtitle"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/gray"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:gravity="left"
                    android:paddingBottom="5dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    
